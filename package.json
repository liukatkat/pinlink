{
  "name": "pinlink",
  "displayName": "pinlink",
  "description": "An extension that pins and links states in proofs",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "pinlink-sidebar-view",
          "title": "PinLink",
          "icon": "$(pin)"
        }
      ]
    },
    "views": {
      "pinlink-sidebar-view": [
        {
          "type": "webview",
          "id": "pinlink.webview",
          "name": "PinLink"
        }
      ]
    },
    "commands": [
      {
        "command": "pinlink.openSidebar",
        "title": "PinLink: Open Sidebar"
      },
      {
        "command": "pinlink.trackState",
        "title": "Track State"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "pinlink.trackState",
          "group": "pinlink@1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.99.0",
    "@types/mocha": "^10.0.8",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.11.1",
    "typescript": "^5.6.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}